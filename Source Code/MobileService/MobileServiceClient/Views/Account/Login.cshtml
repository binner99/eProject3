@model Data.Vo.Login

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="register-photo">
    <div class="form-container">
        <div data-aos="slide-up" data-aos-duration="1200" class="image-holder"></div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <h1 class="text-center text-primary" data-aos="fade">log<strong><span style="text-decoration: underline;">in</span></strong></h1>
            <div class="form-group">
                @Html.EditorFor(model => model.memPhone, new { htmlAttributes = new { @class = "bg-white border rounded border-primary shadow form-control", required = "", placeholder = "Phone number", maxlength = "11", minlength = "10", autofocus = "", inputmode = "numeric" } })
                @Html.ValidationMessageFor(model => model.memPhone, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.EditorFor(model => model.memPass, new { htmlAttributes = new { @class = "bg-white border rounded border-primary shadow form-control", required = "", placeholder = "Password" } })
                @Html.ValidationMessageFor(model => model.memPass, "", new { @class = "text-danger" })

            </div>
            <div class="form-group"><button class="btn btn-primary btn-block" type="submit" data-bs-hover-animate="pulse">Login</button></div>
        }
    </div>
</div>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>

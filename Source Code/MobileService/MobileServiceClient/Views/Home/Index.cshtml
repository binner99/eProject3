@model MobileServiceClient.Models.OR

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<div class="newsletter">
    <h2>Online Recharge Now @ViewBag.BillPhone</h2>
    <div id="FormMain">
        @using (Ajax.BeginForm("NextPay", "Home", new AjaxOptions { HttpMethod="Post"},new { id="FormOR"}))
        {
                @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @id = "Phone", @placeholder = "Phone number" } })
                @Html.ValidationMessageFor(model => model.Phone, "")
                @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @id = "Amount", @placeholder = "Amount (Rs.)" } })
                @Html.ValidationMessageFor(model => model.Amount, "")
                <input type="submit" id="btnOR" value="Payment Now" />
        }
        <div id="formPay" style="display:none;">
            @Html.Partial("NextPay")
        </div>
    </div>
</div>
<script>
    $("#btnOR").click(function () {
        if ($("#FormOR").valid()==true) {
            $("#FormOR").hide("slow");
            $("#formPay").show("slow");
        }
    });


</script>


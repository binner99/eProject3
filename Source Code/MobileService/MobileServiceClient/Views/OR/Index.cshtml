@{
    ViewBag.Title = "Home Page";
}
<style>
    body {
        font-family: Calibri;
    }
</style>

<div class="jumbotron col-11 ml-5 mt-1">
    <h1>Online Mobile Recharge</h1>
    <div class="row" >
        <div class="col-md-4">
            <div class="form-group ml-5">
                <label>
                    <i class="fa fa-mobile" aria-hidden="true">&nbsp;<span style="font-family: Calibri">Mobile Number</span></i>
                    <input type="text" class="form-control"/>
                </label>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group ml-5">
                <label>
                    <i class="fa fa-inr" aria-hidden="true">&nbsp;<span style="font-family: Calibri">Amount</span></i>
                    <input type="text" class="form-control"/>
                </label>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group ml-5">
                <label>
                    <button class="btn btn-primary mt-4" >Recharge Now</button>
                </label>
            </div>
        </div>
    </div>
</div>
